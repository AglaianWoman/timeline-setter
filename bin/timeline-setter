#!/usr/bin/env ruby

require File.expand_path("../../lib/timeline_setter.rb", __FILE__)

csv = ARGV[0]
raise "specify a csv" unless csv

sheet = File.open(csv).read
events = TimelineSetter::Parser.new sheet
html = TimelineSetter::Timeline.new(events.events).timeline
File.open(File.expand_path("../../public/timeline.html", __FILE__),'w+') do |doc|
  doc.write html
end
